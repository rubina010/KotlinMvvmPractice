    android:orientation="vertical">
    <TextView
        android:id="@+id/forecast_fragment_mintemp_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        />

    <TextView
        android:id="@+id/forecast_fragment_maxtemp_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        />

    <TextView
        android:id="@+id/forecast_fragment_humidity_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        />
